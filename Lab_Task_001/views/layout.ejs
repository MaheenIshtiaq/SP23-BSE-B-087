<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Layout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Super Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/admin/products">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/products">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="/">Visit Main Site</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <hr>
    
    <!-- Main Content Area -->
    <div class="container">
        <h2>Welcome to the Admin Dashboard</h2>
        <button class="btn btn-primary" onclick="toggleForm()">Show Form</button>
        
        <!-- Include Form Partial -->
        <%- include('partials/_form') %>
    </div>

    <hr>

    <!-- Footer -->
    <footer class="text-center py-3">
        <h5>Footer</h5>
    </footer>

    <!-- Script to Toggle Form Display -->
    <script>
        function toggleForm() {
            const form = document.getElementById('adminForm');
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        }
    </script>
    
    <!-- Bootstrap JavaScript Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
